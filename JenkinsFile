pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'pytest test_calculator.py'
            }
        }
        stage('Lint Code') {
            steps {
                bat 'flake8 app.py'
            }
        }
        stage('Deploy') {
            steps {
                bat 'flask run --host=0.0.0.0'
            }
        }
    }
}
